#!/usr/bin/env bash

modules package service

package_definition \
  base_url "http://ftp9.us.postgresql.org/pub/mirrors/postgresql/source/v${package_version}"

if user_is_root
then
  sudo=""

  read_default user prefix package
  service_user="$_package_user"
else
  sudo="sudo"
  package_user="$USER"
  prefix_path="$HOME/.bdsm"
fi

if [[ "${package_user}" = "postgresql" || -z ${package_user} ]]
then
  package_user="postgres"
fi

log_path="$data_path/log"

if [[ "$action" = *install ]]
then
  configure_flags=(
    --prefix="${install_base_path}/${package_version}"
    --datadir="$data_path"
    --with-openssl
    --enable-shared
  )

  if os_is_darwin
  then
    configure_flags[${#configure_flags[@]}]="--with-bonjour"
  fi

  export CFLAGS='-O2'
fi

timestamp="$(date +"%Y-%m-%dT%H:%M")"

